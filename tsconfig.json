{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/darta-types": [
        "./packages/darta-types/src/*"
      ],
      "@/darta-styles": [
        "./packages/darta-styles/src/*"
      ]
    },
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx"
  },
  "lib": [
    "ES2022"
  ],
  "exclude": [
    "node_modules"
  ],
  "composite": true,
  "include": [
    "./packages/darta-types/src/*",
    "./packages/darta-styles/src/*",
    "./packages/graphserver/**/*",
    "./packages/graphserver/serviceAccountKey.json"
  ]
}
