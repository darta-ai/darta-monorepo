{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/darta-types": ["./packages/darta-types/src/*"]
  },
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx" // TODO we want "preserve" generally?
  },
  "references": [
    { "path": "./packages/graph" }
],
  "exclude": ["node_modules", "scratch*"],
  "composite": true,
}