{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "paths": {
          "*": ["node_modules/*"]
        },
        "rootDir": "src",
        "lib": ["es2019", "dom"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}